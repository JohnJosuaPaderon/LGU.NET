<UserControl x:Class="LGU.Views.HumanResource.PreviewEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"    
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Styles/Default.xaml"/>
    </UserControl.Resources>
    <materialDesign:Card>
        <StackPanel>
            <materialDesign:ColorZone Style="{DynamicResource SmallHeaderColorZone}">
                <TextBlock Text="Employee's Details" Style="{DynamicResource SmallHeaderTextBlock}"/>
            </materialDesign:ColorZone>
            <StackPanel>
                <TextBox Text="{Binding Employee.FirstName}" materialDesign:HintAssist.Hint="First Name"/>
                <TextBox Text="{Binding Employee.MiddleName}" materialDesign:HintAssist.Hint="Middle Name"/>
                <TextBox Text="{Binding Employee.LastName}" materialDesign:HintAssist.Hint="Last Name"/>
                <TextBox Text="{Binding Employee.NameExtension}" materialDesign:HintAssist.Hint="Name Extension"/>
                <TextBox Text="{Binding Employee.Department.Description}" materialDesign:HintAssist.Hint="Department"/>
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
