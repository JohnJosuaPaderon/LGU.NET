<mahApps:MetroWindow x:Class="LGU.Core.Views.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:prism="http://prismlibrary.com/"       
                     xmlns:viewModels="clr-namespace:LGU.Core.ViewModels"
                     xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                     prism:ViewModelLocator.AutoWireViewModel="True"
                     Title="{Binding Title}" WindowState="{Binding WindowState}" Background="{DynamicResource MaterialDesignPaper}">
    <mahApps:MetroWindow.Resources>
        <ResourceDictionary Source="../../Styles/Core.xaml" />
    </mahApps:MetroWindow.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn,Duration=0:0:1}">
            <ContentControl prism:RegionManager.RegionName="{x:Static viewModels:MainWindowViewModel.CONTENT_REGION}"/>
        </materialDesign:TransitioningContent>
    </ScrollViewer>
</mahApps:MetroWindow>
