<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LGU.HumanResource.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../Styles/Variable.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="TimeLogHeaderTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="64"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="{DynamicResource FormHeaderFontFamily}"/>
    </Style>
    
</ResourceDictionary>